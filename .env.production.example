# Production Environment Configuration
# Copy this file to .env.production and fill in the values

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
SUPABASE_ANON_KEY=your-anon-key

# FastAPI Configuration
FASTAPI_URL=http://backend:8000
MODEL_DIR=/app/models
LOG_LEVEL=INFO

# Airflow Configuration
AIRFLOW_DB_USER=airflow
AIRFLOW_DB_PASSWORD=your-secure-password
AIRFLOW_DB_NAME=airflow
AIRFLOW_FERNET_KEY=your-fernet-key
AIRFLOW_WEBSERVER_SECRET_KEY=your-secret-key
AIRFLOW_ADMIN_USER=admin
AIRFLOW_ADMIN_PASSWORD=your-admin-password

# Docker Registry (GitHub Container Registry)
BACKEND_IMAGE=ghcr.io/your-org/churn-prediction/backend:latest
FRONTEND_IMAGE=ghcr.io/your-org/churn-prediction/frontend:latest

# Monitoring & Error Tracking
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Production Domain
PRODUCTION_DOMAIN=your-app.com

# Database Backup
BACKUP_RETENTION_DAYS=30
